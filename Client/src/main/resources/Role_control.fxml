<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.ComboBox?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="589.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Admin.RoleControl">
    <children>
        <!-- Заголовок -->
        <Label layoutX="29.0" layoutY="21.0" text="Управление пользователями">
            <font>
                <Font name="Arial" size="24.0" />
            </font>
        </Label>

        <!-- Таблица пользователей -->
        <TableView fx:id="usersTable" layoutX="29.0" layoutY="64.0" prefHeight="400.0" prefWidth="942.0">
            <columns>
                <TableColumn fx:id="loginColumn" prefWidth="160.0" text="Логин">
                    <cellValueFactory>
                        <PropertyValueFactory property="login" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="phoneColumn" prefWidth="130.0" text="Телефон">
                    <cellValueFactory>
                        <PropertyValueFactory property="phone" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="notificationsColumn" prefWidth="130.0" text="Уведомления">
                    <cellValueFactory>
                        <PropertyValueFactory property="notifications" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="temperatureColumn" prefWidth="130.0" text="Температура">
                    <cellValueFactory>
                        <PropertyValueFactory property="temperature" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="pressureColumn" prefWidth="130.0" text="Давление">
                    <cellValueFactory>
                        <PropertyValueFactory property="pressure" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="speedColumn" prefWidth="130.0" text="Скорость">
                    <cellValueFactory>
                        <PropertyValueFactory property="speed" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="roleColumn" prefWidth="130.0" text="Роль">
                    <cellValueFactory>
                        <PropertyValueFactory property="role" />
                    </cellValueFactory>

                </TableColumn>
            </columns>
        </TableView>
        <ComboBox fx:id="comboBox"
                  style="-fx-background-color: white; -fx-text-fill: black; -fx-border-color: #ccc;">
        </ComboBox>

        <!-- Кнопка "Назад" -->
        <Button fx:id="backButton" layoutX="383.0" layoutY="530.0" mnemonicParsing="false" onAction="#back_Pressed" prefHeight="30.0" prefWidth="84.0" text="Назад">
            <font>
                <Font size="14.0" />
            </font></Button>

        <!-- Кнопка "Изменить роль" -->
        <Button fx:id="changeRole" layoutX="499.0" layoutY="530.0" mnemonicParsing="false" onAction="#changeRole_Pressed" prefHeight="30.0" prefWidth="166.0" text="Изменить роль">
            <font>
                <Font size="14.0" />
            </font></Button>

        <!-- Контейнер для отображения ошибки или подтверждения -->
        <Label fx:id="statusMessage" alignment="CENTER" layoutX="1.0" layoutY="494.0" prefHeight="16.0" prefWidth="1000.0" text="Ошибка" textFill="RED" visible="false" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <font>
                <Font name="Arial" size="14.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
